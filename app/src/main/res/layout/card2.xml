<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="4dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll"
        tools:context="com.casbah.casbahdzcommandes.MainActivity">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="80dp"
            android:layout_height="105dp"
            android:layout_gravity="start|center_vertical">


        </RelativeLayout>



        <TextView
            android:id="@+id/textC2"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"

            android:text="000$"
            android:textSize="15sp"
            android:layout_marginRight="80dp"
            android:textStyle="bold"
            ></TextView>

        <TextView
            android:id="@+id/textC1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CCCCCCCCCCCCCCCCCCCCCCCc"
            android:padding="0dp"
            android:textColor="@android:color/black"

            android:textSize="17sp"
            android:textStyle="bold"></TextView>

        <WebView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"


            app:layout_anchor="@+id/relativeLayout"
            app:layout_anchorGravity="center"

            tools:ignore="VectorDrawableCompat" />
        <ImageView
            android:id="@+id/imageDelete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:onClick="sup"
            android:layout_marginRight="55dp"
android:layout_gravity="right|bottom"
            app:srcCompat="@drawable/delete"
            tools:ignore="VectorDrawableCompat" />




        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="130dp"
            android:layout_height="40dp"
android:layout_marginRight="10dp"
            android:layout_gravity="right|center"
            numberpicker:custom_layout="@layout/number_picker_layout"
            numberpicker:max="9999"
            numberpicker:min="1"
            numberpicker:unit="1"
            numberpicker:value="-5" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.cardview.widget.CardView>