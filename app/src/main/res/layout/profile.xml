<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.casbah.casbahdzcommandes.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5f27cd">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5f27cd">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        android:id="@+id/tv1"
        app:strokeWidth="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        app:strokeColor="#000">
    <ImageView
        android:id="@+id/tv"

        android:layout_width="100dp"
        android:layout_height="100dp"


        />
    </com.google.android.material.card.MaterialCardView>
    <ImageButton
        android:id="@+id/photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="120dp"
        android:padding="20dp"
        android:layout_marginRight="1dp"




        android:src="@drawable/photo"
        android:text="" />


    <ImageButton
        android:id="@+id/gallery"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="170dp"
        android:padding="20dp"
        android:layout_marginRight="1dp"




        android:src="@drawable/gallery"
        android:text="" />
    <ImageButton
        android:id="@+id/rotation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="220dp"
        android:padding="20dp"
        android:layout_marginRight="1dp"




        android:src="@drawable/rotation"
        android:text="" />



    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/magasin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:padding="4dp"

        android:layout_below="@+id/tv1"
        android:background="@drawable/editbox"


        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@+id/tv1"
            android:background="@drawable/editbox"

            android:id="@+id/nom"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>





    <Spinner
        android:id="@+id/Spinner"
        android:background="@drawable/editbox"
        android:layout_below="@+id/magasin"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:padding="4dp"        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"


        />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/NUM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="N° de téléphone"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:padding="4dp"
        android:layout_below="@+id/Spinner"
        android:background="@drawable/editbox"

        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Spinner"
            android:inputType="number"
            android:background="@drawable/editbox"

            android:id="@+id/num"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:padding="4dp"
        android:layout_below="@+id/NUM"
        android:id="@+id/l"
        android:background="@drawable/editbox"

        android:hint="Wilaya">

        <AutoCompleteTextView
            android:id="@+id/wilaya"
            android:layout_width="match_parent"
            android:layout_below="@+id/NUM"
            android:background="@drawable/editbox"

            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:padding="4dp"
        android:layout_below="@+id/l"
        android:background="@drawable/editbox"

        android:id="@+id/ll"
        android:hint="Commune">

        <AutoCompleteTextView
            android:id="@+id/commune"
            android:layout_width="match_parent"
            android:layout_below="@+id/l"
            android:background="@drawable/editbox"

            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:id="@+id/IDDl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adresse"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:padding="4dp"
        android:layout_below="@+id/ll"
        android:background="@drawable/editbox"

        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/adresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:background="@drawable/editbox"


            />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:id="@+id/IDDll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:padding="4dp"
        android:layout_below="@+id/IDDl"
        android:background="@drawable/editbox"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IDDl"
            android:background="@drawable/editbox"
android:inputType="textEmailAddress"

            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:id="@+id/IDDlll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:padding="4dp"
        android:layout_below="@+id/IDDll"
        android:background="@drawable/editbox"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IDDll"
            android:background="@drawable/editbox"
            android:inputType="textPassword"


            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:id="@+id/IDDllll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmer le Mot de passe"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"

        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:padding="4dp"
        android:layout_below="@+id/IDDlll"
        android:background="@drawable/editbox"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mdp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IDDlll"
            android:background="@drawable/editbox"
            android:inputType="textPassword"


            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textmdp"
        android:textColor="#000000"

        android:text="Activer la localisation pour se faire localiser"
        android:layout_below="@+id/IDDllll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="100dp"/>



</RelativeLayout>
    </ScrollView>

<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/add"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="bottom|end"
android:layout_margin="@dimen/fab_margin"
app:srcCompat="@drawable/valider"

    app:backgroundTint="#75daad"

    tools:ignore="VectorDrawableCompat" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>