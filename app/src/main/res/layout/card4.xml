<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll"
        tools:context="com.casbah.casbahdzcommandes.MainActivity">
        <TextView
            android:id="@+id/textC3"
            android:textColor="@android:color/black"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="80dp"

            android:text="CC"

            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            ></TextView>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="80dp"
            android:layout_height="105dp"
            android:layout_gravity="start|center_vertical">


        </RelativeLayout>





<RelativeLayout
    android:layout_width="130dp"
    android:layout_height="match_parent"
    android:id="@+id/relative1"
    android:layout_gravity="center|center"

>
    <TextView
        android:id="@+id/textC1"
        android:textColor="@android:color/black"
        android:layout_width="80dp"
        android:layout_height="wrap_content"

        android:text="Fardeaux"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        ></TextView>
        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/number_picker1"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_below="@id/textC1"

            numberpicker:custom_layout="@layout/number_picker_layout"
            numberpicker:max="9999"
            numberpicker:min="0"
            numberpicker:unit="1"
            numberpicker:value="-5" />




    <TextView
        android:id="@+id/textC2"
        android:textColor="@android:color/black"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
android:layout_below="@+id/number_picker1"
        android:text="Bouteilles"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        ></TextView>
    <com.travijuu.numberpicker.library.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textC2"
        numberpicker:custom_layout="@layout/number_picker_layout"
        numberpicker:max="9999"
        numberpicker:min="0"
        numberpicker:unit="1"
        numberpicker:value="-5" />
</RelativeLayout>

        <WebView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"


            app:layout_anchor="@+id/relativeLayout"
            app:layout_anchorGravity="center"
android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"

            android:layout_marginBottom="10dp"
            tools:ignore="VectorDrawableCompat" />
        <ImageView
            android:id="@+id/imageDelete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:onClick="sup"
            android:layout_marginRight="10dp"
android:layout_gravity="right|center"
            app:srcCompat="@drawable/delete"
            tools:ignore="VectorDrawableCompat" />




    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.cardview.widget.CardView>